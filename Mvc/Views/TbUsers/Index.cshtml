@model IEnumerable<Mvc.Models.MVCTbuserModel>

@{
    ViewBag.Title = "Users";
}

<h2>Users</h2>

<p>
    <a href="@Url.Action("AddOrEdit", "TbUsers")">Nuevo</a>
</p>
<table class="table table-striped">
    <tr class="table-heading">
        <th>
            @Html.DisplayNameFor(model => model.usr_nom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.priv)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.activo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.password)
        </th>
        <th>Acciones</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.usr_nom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.priv)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.activo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.password)
        </td>
        <td>
            <a href="@Url.Action("AddOrEdit", "TbUsers", new { id = item.usr_id })" class="btn btn-default">Editar</a> |
            <a onclick="Delete(@item.usr_id)" class="btn btn-default">Eliminar</a> 

        </td>
    </tr>
}

</table>

@section scripts{
    <script>
        $(function () {
            var successMessage = '@TempData["SuccessMessage"]'
            if (successMessage != '')
                alertify.success(successMessage);
        });
        function Delete(id) {
            alertify.confirm('Web Api CRUD Operations', '¿Estás seguro de querer borrar éste registro?', function () {
                window.location.href = '@Url.Action("Delete","TbUsers")/' + id;

            }, null);
        }
    </script>
    }