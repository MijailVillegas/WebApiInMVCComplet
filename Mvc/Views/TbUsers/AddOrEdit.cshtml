@model Mvc.Models.MVCTbuserModel
@{
    ViewBag.Title = "AddOrEdit";
}

<h2>AddOrEdit</h2>

<div class="form-body">
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(model => model.usr_id)
        @Html.HiddenFor(model => model.activo)
        <div class="form-group">
            @Html.LabelFor(model => model.usr_nom)
            @Html.EditorFor(model => model.usr_nom)
            @Html.ValidationMessageFor(model => model.usr_nom)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.email)
            @Html.EditorFor(model => model.email)
            @Html.ValidationMessageFor(model => model.email)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.password)
            @Html.EditorFor(model => model.password)
            @Html.ValidationMessageFor(model => model.password)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.priv)
            @Html.EditorFor(model => model.priv)
            @Html.ValidationMessageFor(model => model.priv)
        </div>
        <div>
            <input type="submit" value="enviar" class="btn button" />
            <input type="reset" value="borrar" class="btn button" />
        </div>
    }
</div>

@section scripts {
    @Scripts.Render("~/bundles/jqueryval");
    }